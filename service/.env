NODE_ENV=development

# SQLite Configuration
SQLITE_DB_PATH=./database.sqlite

# MySQL Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=user
MYSQL_PASSWORD=password
MYSQL_DATABASE=database

